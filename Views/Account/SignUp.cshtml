        $(document).ready(function () {

            $('#checking').hide();

            $('#b12').click(function () {
                
                var Email = $('#email').val();

                
                $('#checking').show();
                $.getJSON("/Account/CheckUserEmail?email=" + Email, function (data) {
                    $('#checking').hide();
                    if (data) {
                        $('#result').text("User already exist");

                    }
                    else {
                        $('#result').text("User Name is available");
                    }
                });

            });

        });


